<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="662dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="410dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/fondo_degradado">

                    <TextView
                        android:id="@+id/textVie3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="#65B9BD"
                        android:drawablePadding="12dp"
                        android:padding="10dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Perfil"
                        android:textAlignment="center"
                        android:textColor="@color/blanco"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Nombre"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Nombre"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:drawableStart="@drawable/ic_nombre"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Edad"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Edad"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:drawableStart="@drawable/ic_mail"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Email"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Email"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Contraseña"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Contraseña"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnEditar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Editar Datos"
                        android:textStyle="bold"
                        android:backgroundTint="#57BD4B"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#90CDE8"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/fondo_degradado">

                    <TextView
                        android:id="@+id/textVie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/purple_500"
                        android:drawablePadding="12dp"
                        android:padding="10dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Historial"
                        android:textAlignment="center"
                        android:textColor="@color/blanco"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/textVie2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/ic_nivel"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Nivel 1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/ic_nivel"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Nivel 2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/te"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/ic_nivel"
                        android:drawablePadding="12dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="Nivel 3"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_salir"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F44336"
                android:drawableRight="@drawable/ic_out"
                android:text="Cerrar sesión"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>