<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:backgroundTint="#FAFAFA">

    <LinearLayout
        android:id="@+id/lnp1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/img_wave2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lnp2"
        android:layout_below="@id/lnp1"
        android:layout_marginTop="-20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:text="Registrarse"
            android:textColor="#00BCD4"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lnp3"
        android:layout_below="@id/lnp2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombre"
            android:hint="@string/nombres"
            app:startIconDrawable="@drawable/ic_person">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editNombre"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:backgroundTint="#BBE0E4"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/txtCedula"
            android:hint="@string/cedula"
            app:startIconDrawable="@drawable/ic_ced">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editCedula"
                android:inputType="text"
                android:textSize="18sp"
                android:backgroundTint="#BBE0E4"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/txtEdad"
            android:hint="@string/edad"
            app:startIconDrawable="@drawable/ic_edad">

            <EditText
                android:id="@+id/editEdad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#BBE0E4"
                android:inputType="textPersonName"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/txtTelefono"
            android:hint="@string/telefono"
            app:startIconDrawable="@drawable/ic_phone">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTelefono"
                android:inputType="textPhonetic"
                android:textSize="18sp"
                android:backgroundTint="#BBE0E4"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/txtCorreo"
            android:hint="@string/correo"
            app:startIconDrawable="@drawable/ic_mail">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editCorre"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:backgroundTint="#BBE0E4"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/txtContra"
            android:hint="@string/contraseÃ±a"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/ic_lock">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/editContras"
                android:inputType="textPassword"
                android:backgroundTint="#BBE0E4"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/lnp4"
        android:layout_width="401dp"
        android:layout_height="69dp"
        android:layout_below="@id/lnp3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_regis"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:layout_marginBottom="130dp"
            android:backgroundTint="@color/ocean"
            android:drawableEnd="@drawable/ic_register"
            android:text="Registrar"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="30dp" />
    </LinearLayout>
</RelativeLayout>