<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/code_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Code Name"
            android:textColor="#079A8C"
            android:textSize="26sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Bienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:text="Bienvenido al Tratamiento"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/Paso1"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@id/Bienvenido"
                android:background="#A0CCDF"
                android:padding="16dp"
                android:text="Paso 1: Alimentación"
                android:textColor="@color/blackColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alimentacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Paso1"
                android:background="#EAF1F6"
                android:padding="16dp"
                android:text="Alimentacion"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imagen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/medicament"
                android:layout_alignBaseline="@id/Paso1"
                android:layout_alignParentRight="true"
                android:foreground="@drawable/img_alimentacion"
                android:padding="20dp"
                android:text=""
                android:textSize="5sp" />

            <TextView
                android:id="@+id/Paso2"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@id/alimentacion"
                android:background="#A0CCDF"
                android:padding="16dp"
                android:text="Paso 2: Medicación"
                android:textColor="@color/blackColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imagen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/Paso2"
                android:layout_alignParentRight="true"
                android:foreground="@drawable/img_medicamento"
                android:padding="20dp"
                android:text=""
                android:textSize="5sp" />

            <TextView
                android:id="@+id/medicament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Paso2"
                android:background="#EAF1F6"
                android:padding="16dp"
                android:text="Medicament"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Paso3"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@id/medicament"
                android:background="#A0CCDF"
                android:padding="16dp"
                android:text="Paso 3: Charlar"
                android:textColor="@color/blackColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imagen3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/medicament"
                android:layout_alignBaseline="@id/Paso3"
                android:layout_alignParentRight="true"
                android:foreground="@drawable/img_conversacion"
                android:padding="20dp"
                android:text=""
                android:textSize="5sp" />

            <TextView
                android:id="@+id/charlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Paso3"
                android:background="#EAF1F6"
                android:padding="16dp"
                android:text="Charlar con amigos o familiares cercanos es terapéutico ya que ellos te escucharán y te apoyarán en todo momento para que te sientas mejor. \n\nAdemas comentar tus sentimientos a otra persona te permite saber de que la red de apoyo es mas grande de lo que piensas. \n\nSi no tienes una persona de confianza para conversar, puedes llamar a este número de apoyo: 0910122010"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Paso4"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@id/charlar"
                android:background="#A0CCDF"
                android:padding="16dp"
                android:text="Paso 4: Descanso"
                android:textColor="@color/blackColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imagen4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/Paso4"
                android:layout_alignParentRight="true"
                android:foreground="@drawable/img_descanso"
                android:padding="20dp"
                android:text=""
                android:textSize="5sp" />

            <TextView
                android:id="@+id/descanso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Paso4"
                android:background="#EAF1F6"
                android:padding="16dp"
                android:text="Es necesario el descanso adecuado ya que te ayudará a disminuir el estrés y mejorar el estado de ánimo. \n\nPor ello te recomendamos descansar 8 horas por dia."
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>